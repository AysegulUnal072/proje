@{
	Layout = "_LayoutAdmin";
}
@model List<Survey>

@if (TempData["basarili"] != null)
{
	<h2 style="color:red">@TempData["basarili"]</h2>
}

<div class="container">

	<div class="row pt-3 pb-4">
		<div>
			<h1>Anketler</h1>
		</div>
	</div>

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Anket Adı
				</th>
				<th>
					Açıklama
				</th>
				<th>
					Soru
				</th>
				<th>
					Anket Türü
				</th>


				<th>

				</th>
				<th>

				</th>
			</tr>
		</thead>

		<tbody>
			@foreach(var survey in Model)
			{
				<tr>
					<td>@survey.Id</td>
					<td>@survey.Title</td>
					<td>@survey.Description</td>
					<td>@survey.Question</td>
					<td>@survey.SurveyType.Name</td>
					<td>
					<a asp-controller="Survey" asp-action="AddUpdate" asp-route-id="@survey.Id" type= "button" class="btn btn-success" style="width:250px">Güncelle</a>
					</td>
					<td>
					<a asp-controller="Survey" asp-action="Delete" asp-route-id="@survey.Id" type="button" class="btn btn-danger" style="width:250px">Sil</a>
					</td>

				</tr>
			}
		</tbody>




	</table>
	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="Survey" asp-action="AddUpdate" class="btn btn-lg btn-primary" type="button">
			Yeni Anket Oluştur
			</a> 
		</div>
	</div>
</div>