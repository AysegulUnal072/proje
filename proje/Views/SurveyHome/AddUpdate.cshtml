
@model Survey
<form method="post" enctype="multipart/form-data">

	<input asp-for="ResimUrl" hidden />
	<div class="row">


		<div class="col-10">


			<div class="border b-3 mt5">
				<div class="row pb-3">
					<h2 class="text-primary">@(Model == null ? "Anket Ekle" : "Kitap Güncelle")</h2>
					</hr>
				</div>
				<div class="mb-3">
					<label asp-for="Title" class="p-0"></label>
					<input asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="SurveyTypeId" class="p-0"></label>
					<select asp-for="SurveyTypeId" asp-items="ViewBag.SurveyTypeList" class="form-select">
					</select>

				</div>
				<div class="mb-3">
					<label asp-for="Description" class="p-0"></label>
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Question" class="p-0"></label>
					<input asp-for="Question" class="form-control" />
					<span asp-validation-for="Question" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="ResimUrl" class="p-0"></label>
					<input type="file" name="file" class="form-control" />
				</div>

				@if (Model != null)
				{
					<button type="submit" class="btn btn-lg btn-primary" style="width:200px">Güncelle</button>
				}
				else
				{
					<button type="submit" class="btn btn-lg btn-primary" style="width:200px">Anket Ekle</button>

				}
				<a asp-controller="Survey" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
					Anketlere Geri Dön
				</a>
			</div>
		</div>
		<div class="col-2">
			@if (Model != null)
			{
				<img src="@Model.ResimUrl" widht="100%"
					 style="border-radius:7px; border:1px solid #bbb9b9" />
			}
		</div>
	</div>


</form>

